<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/file_save_success"
        android:textSize="@dimen/welcome"
        android:gravity="center"
        android:padding="@dimen/welcome_padding"
        android:textColor="@color/welcome_text"
        android:background="@color/welcome_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dialog_ok"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dialog_cancel"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>