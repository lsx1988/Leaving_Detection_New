<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="@dimen/welcome"
        android:gravity="center"
        android:padding="@dimen/welcome_padding"
        android:textColor="@color/welcome_text"
        android:background="@color/welcome_background"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rb_custom_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_model"
                android:buttonTint="@color/radio_color"/>

            <RadioButton
                android:id="@+id/rb_default_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_model"
                android:buttonTint="@color/radio_color"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dialog_ok"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>